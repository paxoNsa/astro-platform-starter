---
import Layout from '../layouts/Layout.astro';
import SongPlayer from '../components/SongPlayer.astro';
import Gallery from '../components/Gallery.astro';

const tracks = [
    {
        title: 'Tema 1',
        lyrics: '/lyrics/tema1.md',
        videoUrl: 'URL_VIDEO',
        audioUrl: 'URL_AUDIO',
        description: 'Descripción del tema 1'
    },
    {
        title: 'Tema 2',
        lyrics: '/lyrics/tema2.md',
        videoUrl: 'URL_VIDEO',
        audioUrl: 'URL_AUDIO',
        description: 'Descripción del tema 2'
    }
    // Añade más temas según necesites
];

const photos = [
    {
        url: '/gallery/photo1.jpg',
        caption: 'Backstage'
    },
    {
        url: '/gallery/photo2.jpg',
        caption: 'En concierto'
    }
    // Añade más fotos según necesites
];
---

<Layout title="Nuevo Disco - Paxo">
    <header class="text-center mb-12">
        <h1 class="text-4xl font-bold mb-4">Título del Disco</h1>
        <p class="text-xl">Fecha de lanzamiento</p>
    </header>

    <section class="mb-16">
        {
            tracks.map((track) => (
                <div class="mb-8 p-6 bg-gray-100 rounded-lg">
                    <h2 class="text-2xl mb-4">{track.title}</h2>
                    <div class="grid md:grid-cols-2 gap-4">
                        <SongPlayer url={track.audioUrl} title={track.title} artist="Paxo" />
                        <div class="flex items-center space-x-4">
                            <a href={track.lyrics} class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
                                Ver letra
                            </a>
                            <a href={track.videoUrl} class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">
                                Ver video
                            </a>
                        </div>
                    </div>
                </div>
            ))
        }
    </section>

    <section class="mb-16">
        <h2 class="text-3xl mb-6">Galería</h2>
        <Gallery photos={photos} />
    </section>

    <section>
        <h2 class="text-3xl mb-6">Reseña</h2>
        <article class="prose lg:prose-xl mx-auto">
            <p>
                <!-- Añade aquí el contenido de la reseña -->
            </p>
        </article>
    </section>
</Layout>

<style>
    .prose {
        max-width: 65ch;
        margin: 0 auto;
    }
</style>
